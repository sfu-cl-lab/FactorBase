<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ca.sfu.cs</groupId>
  <artifactId>thirdparty</artifactId>
  <packaging>pom</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>thirdparty</name>
  <url>https://github.com/sfu-cl-lab/FactorBase/code/thirdparty</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <version>2.4</version>
        <executions>
          <execution>
	    <id>tetrad-pom</id>
            <phase>install</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <file>tetrad/tetrad-6.5.3.pom</file>
	      <groupId>edu.cmu</groupId>
	      <artifactId>tetrad</artifactId>
	      <version>6.5.3</version>
	      <packaging>pom</packaging>
            </configuration>
          </execution>
          <execution>
	    <id>tetrad-lib-jar</id>
            <phase>install</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <file>tetrad/tetrad-lib-6.5.3.jar</file>
	      <groupId>edu.cmu</groupId>
	      <artifactId>tetrad-lib</artifactId>
	      <version>6.5.3</version>
	      <packaging>jar</packaging>
            </configuration>
          </execution>
	</executions>
      </plugin>
    </plugins>
  </build>
</project>
